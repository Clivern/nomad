{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-7ad76705",
      "instance_type": "t2.medium",
      "ssh_username": "ubuntu",
      "iam_instance_profile": "packer_build",
      "ami_name": "nomad-e2e-{{timestamp}}",
      "tags": {
        "OS": "Ubuntu"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./linux/install-nomad",
      "destination": "/tmp/install-nomad"
    },
    {
      "type": "file",
      "source": "./linux/install-nomad-config",
      "destination": "/tmp/install-nomad-config"
    },
    {
      "type": "file",
      "source": "./linux/install-consul-config",
      "destination": "/tmp/install-consul-config"
    },
    {
      "type": "file",
      "source": "./linux/install-vault-config",
      "destination": "/tmp/install-vault-config"
    },
    {
      "type": "file",
      "source": "./linux/nomad.service",
      "destination": "/tmp/nomad.service"
    },
    {
      "type": "file",
      "source": "./linux/consul_aws.service",
      "destination": "/tmp/consul.service"
    },
    {
      "type": "file",
      "source": "./linux/vault.service",
      "destination": "/tmp/vault.service"
    },
    {
      "type": "shell",
      "script": "./linux/setup.sh"
    }
  ]
}
